<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- dialog样式 -->
    <style name="password_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowIsFloating">true</item>    <!--是否浮在界面上-->
        <item name="android:windowIsTranslucent">true</item> <!--是否半透明-->
        <item name="android:windowNoTitle">false</item>       <!--是否有标题-->
        <item name="android:windowBackground">@android:color/transparent</item> <!--窗口背景色透明-->
        <item name="android:backgroundDimEnabled">false</item> <!--背景是否模糊显示-->
    </style>

    <!-- dialog底部弹出菜单动画 -->
    <style name="password_dialog_animation" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/password_dialog_enter_animation</item>
        <item name="@android:windowExitAnimation">@anim/password_dialog_exit_animation</item>
    </style>


</resources>